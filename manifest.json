{
  "manifest_version": 2,
  "name": "Time Tracker",
  "version": "0.1.2",
  "description": "Tracks time spent on specific sites and warns/block when it exceeds a defined limit.",
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
